            lxc.customize "net.0.ipv4.gateway", "10.0.0.1"

            # WAN interface
            lxc.customize "net.1.type",         "veth"
            lxc.customize "net.1.flags",        "up"
            lxc.customize "net.1.link",         "br-wan1-gwa"
            lxc.customize "net.1.name",         "wan0"
